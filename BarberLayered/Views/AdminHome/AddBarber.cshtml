@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Додавання барбера</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }

        h1 {
            text-align: center;
        }

        label {
            display: block;
            margin-bottom: 5px;
            text-align: left;
        }

        input[type="text"], input[type="email"], input[type="tel"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #FFA500;
            border-radius: 5px;
            box-sizing: border-box;
        }

        button {
            background-color: #905B22;
            color: #fff;
            border: none;
            padding: 15px 25px;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 10px;
            margin-top: 10px;
        }

            button:hover {
                background-color: #f5a742;
            }

        .warning-button {
            background-color: red;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 30px;
            margin-left: 0px;
        }

        .confirmation-modal {
            display: flex;
            justify-content: center;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 9999;
        }

        .confirmation-box {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }

            .confirmation-box h2 {
                margin-top: 0;
            }

            .confirmation-box button {
                margin-top: 10px;
                margin-right: 10px;
            }

        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.4);
            padding-top: 60px;
        }

        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 20%;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }

        .button-link {
            background-color: #905B22;
            max-width: 120px;
            color: #fff;
            border: none;
            padding: 7px 15px;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 10px;
            margin-top: 30px;
            text-decoration: none;
            font-size: 15px;
            display: block;
        }

            .button-link:hover {
                background-color: #f5a742;
            }

    </style>
</head>
<body>

    @* @await Html.PartialAsync("~/Views/AdminHome/AdminViewPartial.cshtml") *@

    <div class="container">
        <h1 style="margin-bottom:65px;">Додавання барбера</h1>
        <h3 style="text-align: left;">Заповніть дані:</h3>
        <form id="adminForm" asp-controller="AdminHome" asp-action="AddBarber" method="post">
            <label for="name">Ім'я:</label>
            <input type="text" id="name" name="name" required>

            <label for="surname">Прізвище:</label>
            <input type="text" id="surname" name="surname" required>

            <label for="phone">Телефон:</label>
            <input type="tel" id="phone" name="phone" required>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>

            <label for="description">Опис:</label>
            @* <textarea id="description" name="Description" style="outline: none; max-width:600px; min-width:400px; width:100%; max-height:300px; #FFA500;"></textarea> *@
            <textarea id="description" name="Description" style="outline: none; max-width:600px; min-width:400px; width:100%; max-height:300px; border: 1px solid #FFA500;"></textarea>

            <label for="surname">Код:</label>
            <input type="text" id="code" name="code" required>

            <button type="submit" style="display: block; margin: 25px auto; text-align: center;">Додати барбера</button>

        </form>

    </div>

    <button class="back-button" onclick="goBack()">&#10094;</button>

    <div id="confirmationModal" class="confirmation-modal" style="display: none;">
        <div class="confirmation-box">
            <h2 style="text-align: center;">Підтвердіть додавання барбера</h2>
            <p>Ви впевнені, що хочете додати нового барбера?</p>
            <button onclick="saveChanges()" style="float: left; margin-left: 50px; padding: 10px 30px;">Так</button>
            <button onclick="hideConfirmationModal()" style="float: right; margin-right: 50px; padding: 10px 30px;">Ні</button>
        </div>
    </div>

    <script>
        function goBack() {
            window.history.back();
        }

        function showConfirmationModal() {
            document.getElementById('confirmationModal').style.display = 'flex';
        }

        function hideConfirmationModal() {
            document.getElementById('confirmationModal').style.display = 'none';
        }

        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage !== 'null' && errorMessage !== '') {
            Swal.fire({
                icon: 'error',
                title: 'Упс...',
                text: errorMessage
            });
        }

        var successMessage = '@TempData["SuccessMessage"]';
        if (successMessage !== 'null' && successMessage !== '') {
            Swal.fire({
                icon: 'success',
                title: 'Успішно!',
                text: successMessage
            });
        }
    </script>

</body>
</html>

